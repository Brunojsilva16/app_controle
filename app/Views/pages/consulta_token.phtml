<h1 class="mt-4">Consulta de Tokens</h1>

<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>ID</th>
                <th>Token</th>
                <th>Paciente</th>
                <th>Criado Por</th>
                <th>Data de Criação</th>
                <th>Data de Vencimento</th>
            </tr>
        </thead>
        <tbody>
            <?php if (empty($tokens)): ?>
                <tr>
                    <td colspan="6" class="text-center">Nenhum token encontrado.</td>
                </tr>
            <?php else: ?>
                <?php foreach ($tokens as $token): ?>
                    <tr>
                        <td><?= htmlspecialchars($token['id']) ?></td>
                        <td><?= htmlspecialchars($token['token']) ?></td>
                        <td><?= htmlspecialchars($token['paciente']) ?></td>
                        <td><?= htmlspecialchars($token['criado_por']) ?></td>
                        <td><?= htmlspecialchars(date('d/m/Y H:i:s', strtotime($token['data_criacao']))) ?></td>
                        <td><?= htmlspecialchars(date('d/m/Y H:i:s', strtotime($token['data_vencimento']))) ?></td>
                    </tr>
                <?php endforeach; ?>
            <?php endif; ?>
        </tbody>
    </table>
</div>

